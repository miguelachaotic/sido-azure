# Azure Storage
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_CONTAINER=images
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net

# Cognitive Services / Computer Vision (OCR)
COG_ENDPOINT=https://<your-cog-endpoint>.cognitiveservices.azure.com
COG_KEY=your_computer_vision_key

# Translator
TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com
TRANSLATOR_KEY=your_translator_key

# Text Analytics (Language)
TEXT_ANALYTICS_ENDPOINT=https://<your-language-endpoint>.cognitiveservices.azure.com
TEXT_ANALYTICS_KEY=your_text_analytics_key

# App settings
PORT=3000
NODE_ENV=development
